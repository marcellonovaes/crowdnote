	function init(c){

		var list = new Array();
		var cur = -1;
		var cur_item = "x";

		for(var i=0; i<c.length; i++){
			
			if(cur_item != c[i].item_id){
				cur++;
				list[cur] = new Array();
				cur_item = c[i].item_id;
			}
			
			list[cur].push(c[i]);

		}


		createTable(list)
	}

	function createTable(list){

		list_points = list;

var container = document.getElementById("container");
table= [
